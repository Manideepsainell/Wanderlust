<% layout("/layouts/boilerplate") %>

<% let activeCategory = typeof category !== 'undefined' ? category.toLowerCase() : null; %>

<body>
  <style>
    #filters {
      display: flex;
      align-items: center;
      justify-content: space-between;
      flex-wrap: nowrap;
      gap: 1.5rem;
      margin-top: 1rem;
    }

    .filter {
      text-align: center;
      opacity: 0.7;
      flex: 0 1 auto;
      margin-top: 0.5rem;
    }

    .filter p {
      font-size: 0.8rem;
    }

    .active-filter {
      border-bottom: 2px solid black;
      opacity: 1 !important;
      font-weight: bold;
    }

    .tax-toggle {
      border: 1px solid black;
      border-radius: 2rem;
      height: 3rem;
      padding: 0.5rem 1rem;
      display: flex;
      align-items: center;
      white-space: nowrap;
      margin-top: 0.3rem;
      margin-bottom: 1rem;
    }
  </style>

  <div id="filters">
  <a href="/filters/Trending" class="filter text-decoration-none text-dark <%= activeCategory === 'trending' ? 'active-filter' : '' %>">
    <div><i class="fa-solid fa-fire"></i></div>
    <p>Trending</p>
  </a>
  <a href="/filters/Rooms" class="filter text-decoration-none text-dark <%= activeCategory === 'rooms' ? 'active-filter' : '' %>">
    <div><i class="fa-solid fa-bed"></i></div>
    <p>Rooms</p>
  </a>
  <a href="/filters/Iconic%20Cities" class="filter text-decoration-none text-dark <%= activeCategory === 'iconic cities' ? 'active-filter' : '' %>">
    <div><i class="fa-solid fa-mountain-city"></i></div>
    <p>Iconic Cities</p>
  </a>
  <a href="/filters/Mountains" class="filter text-decoration-none text-dark <%= activeCategory === 'mountains' ? 'active-filter' : '' %>">
    <div><i class="fa-solid fa-mountain"></i></div>
    <p>Mountains</p>
  </a>
  <a href="/filters/Castles" class="filter text-decoration-none text-dark <%= activeCategory === 'castles' ? 'active-filter' : '' %>">
    <div><i class="fa-brands fa-fort-awesome"></i></div>
    <p>Castles</p>
  </a>
  <a href="/filters/Arctic" class="filter text-decoration-none text-dark <%= activeCategory === 'arctic' ? 'active-filter' : '' %>">
    <div><i class="fa-regular fa-snowflake"></i></div>
    <p>Arctic</p>
  </a>
  <a href="/filters/Camping" class="filter text-decoration-none text-dark <%= activeCategory === 'camping' ? 'active-filter' : '' %>">
    <div><i class="fa-solid fa-campground"></i></div>
    <p>Camping</p>
  </a>
  <a href="/filters/Farms" class="filter text-decoration-none text-dark <%= activeCategory === 'farms' ? 'active-filter' : '' %>">
    <div><i class="fa-solid fa-cow"></i></div>
    <p>Farms</p>
  </a>
  <a href="/filters/Snowboarding" class="filter text-decoration-none text-dark <%= activeCategory === 'snowboarding' ? 'active-filter' : '' %>">
    <div><i class="fa-solid fa-person-snowboarding"></i></div>
    <p>Snowboarding</p>
  </a>
  <a href="/filters/Beach" class="filter text-decoration-none text-dark <%= activeCategory === 'beach' ? 'active-filter' : '' %>">
    <div><i class="fa-solid fa-umbrella-beach"></i></div>
    <p>Beach</p>
  </a>


    <!-- Tax Toggle -->
    <div class="tax-toggle">
      <div class="form-check-reverse form-switch">
        <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
        <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
      </div>
    </div>
  </div>

  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
    <% for(let listing of listings) { %>
      <a href="/listings/<%= listing._id %>" class="listing-link">
        <div class="card col listing-card">
          <img
            class="card-img-top"
            src="<%= listing.image?.url || '/default-image.jpg' %>"
            alt="listing_image"
            style="height:20rem"
          />
          <div class="card-img-overlay"></div>
          <div class="card-body">
            <p class="card-text">
              <b><%= listing.title %></b><br />
              &#8377;<%= listing.price ? listing.price.toLocaleString("en-IN") : 'N/A' %>/night
              <i class="tax-info">&nbsp; &nbsp; +18% GST</i>
            </p>
          </div>
        </div>
      </a>
    <% } %>
  </div>

  <script>
    let taxSwitch = document.getElementById("flexSwitchCheckDefault");
    taxSwitch.addEventListener("click", () => {
      let taxInfo = document.getElementsByClassName("tax-info");
      for (let info of taxInfo) {
        info.style.display = info.style.display === "inline" ? "none" : "inline";
      }
    });
  </script>
</body>
