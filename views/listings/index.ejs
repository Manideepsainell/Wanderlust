<% layout("/layouts/boilerplate") %>
<body>
   <style>
#filters {
  display: flex;
  align-items: center; /* Ensures all elements align */
  justify-content: space-between; /* Spreads icons and toggle button */
  flex-wrap: nowrap;
  gap: 1.5rem;
  margin-top: 1rem; /* Adds spacing from the top */
}

.filter {
  text-align: center;
  opacity: 0.7;
  flex: 0 1 auto;
  margin-top: 0.5rem;
}

.filter p {
  font-size: 0.8rem;
}

.tax-toggle {
  border: 1px solid black;
  border-radius: 2rem;
  height: 3rem;
  padding: 0.5rem 1rem;
  display: flex;
  align-items: center;
  white-space: nowrap;
  margin-top: 0.3rem;
  margin-bottom: 1rem; /* Adjusts vertical alignment */
}



  </style>
<div id="filters">
  <a href="/listings?category=Trending" class="filter text-decoration-none text-dark">
    <div><i class="fa-solid fa-fire"></i></div>
    <p>Trending</p>
  </a>
  <a href="/listings?category=Rooms" class="filter text-decoration-none text-dark">
    <div><i class="fa-solid fa-bed"></i></div>
    <p>Rooms</p>
  </a>
  <a href="/listings?category=Iconic Cities" class="filter text-decoration-none text-dark">
    <div><i class="fa-solid fa-mountain-city"></i></div>
    <p>Iconic Cities</p>
  </a>
  <a href="/listings?category=Mountains" class="filter text-decoration-none text-dark">
    <div><i class="fa-solid fa-mountain"></i></div>
    <p>Mountains</p>
  </a>
  <a href="/listings?category=Castles" class="filter text-decoration-none text-dark">
    <div><i class="fa-brands fa-fort-awesome"></i></div>
    <p>Castles</p>
  </a>
  <a href="/listings?category=Arctic" class="filter text-decoration-none text-dark">
    <div><i class="fa-regular fa-snowflake"></i></div>
    <p>Arctic</p>
  </a>
  <a href="/listings?category=Camping" class="filter text-decoration-none text-dark">
    <div><i class="fa-solid fa-campground"></i></div>
    <p>Camping</p>
  </a>
  <a href="/listings?category=Farms" class="filter text-decoration-none text-dark">
    <div><i class="fa-solid fa-cow"></i></div>
    <p>Farms</p>
  </a>
  <a href="/listings?category=Snowboarding" class="filter text-decoration-none text-dark">
    <div><i class="fa-solid fa-person-snowboarding"></i></div>
    <p>Snowboarding</p>
  </a>
  <a href="/listings?category=Beach" class="filter text-decoration-none text-dark">
    <div><i class="fa-solid fa-umbrella-beach"></i></div>
    <p>Beach</p>
  </a>

  <div class="tax-toggle">
    <div class="form-check-reverse form-switch">
      <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
      <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
    </div>
  </div>
</div>


    
    <!-- Tax Toggle placed correctly -->
    <div class="tax-toggle">
      <div class="form-check-reverse form-switch">
        <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
        <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
      </div>
    </div>
  </div>

  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
    <% for(let listing of allListings) { %>
      <a href="/listings/<%= listing._id %>" class="listing-link">
        <div class="card col listing-card">
          <img
            class="card-img-top"
            src="<%= listing.image?.url || '/default-image.jpg' %>"
            alt="listing_image"
            style="height:20rem"
          />
          <div class="card-img-overlay"></div>
          <div class="card-body">
            <p class="card-text">
              <b><%= listing.title %></b><br />
              &#8377;<%= listing.price ? listing.price.toLocaleString("en-IN") : 'N/A' %>/night
              <i class="tax-info">&nbsp; &nbsp; +18% GST</i>
            </p>
          </div>
        </div>
      </a>
    <% } %>
  </div>

  <script>
    let taxSwitch = document.getElementById("flexSwitchCheckDefault");
    taxSwitch.addEventListener("click", () => {
      let taxInfo = document.getElementsByClassName("tax-info");
      for (let info of taxInfo) {
        info.style.display = info.style.display === "inline" ? "none" : "inline";
      }
    });
  </script>
</body>
